{
  "compilerOptions": {
      "skipLibCheck": true,
      "target": "ES2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": ".",
      "useUnknownInCatchVariables": false,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*","*.js", "*.ts"],
  "exclude": ["src/scripts/**/*"]
}